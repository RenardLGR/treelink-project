    </form> -->

    <% if(user.id == profile._id){ %>
        <a href="/edit/profile/<%= user.id %>">Edit profile</a>
    <% } %>

        <div>
            <a href="/logout">Logout</a>
        </div>

    <script src="/js/main.js"></script>
</body>
</html>